<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/trip_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/point_black"
            android:text="ID here"
            android:textSize="16dp"
            android:layout_weight="1"/>


        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_weight="5">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_weight="2"
                    android:paddingLeft="20dp"
                    android:text="@string/trip_row_date"
                    android:textColor="@color/point_black"/>

                <TextView
                    android:id="@+id/trip_detail"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:textColor="@color/point_black"
                    android:paddingLeft="15dp"
                    android:text="Trip detail here"
                    android:textSize="16dp"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:paddingLeft="20dp"
                    android:text="@string/trip_row_dutation"
                    android:gravity="center_vertical"
                    android:textColor="@color/point_black"/>

                <TextView
                    android:id="@+id/trip_duration"
                    android:layout_height="match_parent"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:textColor="@color/point_black"
                    android:text="Trip duration here"
                    android:textSize="16dp"/>

            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_delete_trip"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_delete_black_24dp"/>

    </LinearLayout>

</LinearLayout>